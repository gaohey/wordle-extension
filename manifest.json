{
  "manifest_version": 3,
  "name": "Wordle Solver - Your Wordle Wingman",
  "version": "1.4",
  "description": "Get smart hints for your Wordle game! This extension analyzes your current game and suggests optimal next guesses.",
  "icons": {
    "16": "icons/icon16.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png", 
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["https://www.nytimes.com/games/wordle/*", "https://yianhe.pythonanywhere.com/*"]
}
